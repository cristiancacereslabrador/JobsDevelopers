<main class="lista-candidatos">
  <h1>Lista de Candidatos</h1>
  {{#if candidatos.length}}
    {{#each candidatos}}
      <div class="candidato">
        <div class="caja">
          <p class="etiqueta">Nombre: </p>
          <p class="nombre">{{nombre}}</p>
        </div>
        <div class="caja">
          <p class="etiqueta">Email: </p>
          <p class="nombre">{{email}}</p>
        </div>
        <div class="caja">
          <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver C.V.</a>
        </div>
      </div>
    {{/each}}
    {{!-- {{/if}} --}}
  {{else}}
    <p>No hay candidatos a√∫n</p>
  {{/if}}
</main>